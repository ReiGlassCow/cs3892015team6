<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.turnup.cs389team6.activities.Game"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginBottom="@dimen/padding_large"
        style="?metaButtonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/logo_yellow"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/difficulty_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level"
            android:textStyle="bold"
            android:textSize="50sp"
            android:textColor="@color/logo_blue"
            android:gravity="center_horizontal" />

    </LinearLayout>

    <TextView
        android:id="@+id/problem_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Problem"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/logo_blue"
        android:gravity="center_horizontal" />

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/padding_large"
        android:layout_marginBottom="24dp"
        android:numColumns="3"
        android:horizontalSpacing="24dp"
        android:layout_marginLeft="@dimen/padding_large"
        android:layout_marginRight="@dimen/padding_large"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="74dp" android:weightSum="1">
        <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/imageView2"
                android:src="@drawable/trophy"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Score: 0"
                android:textColor="@color/logo_blue"
                android:id="@+id/score"/>

        <ImageView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/question"
                android:paddingLeft="30dp"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="70dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Time: 30"
            android:textColor="@color/logo_blue"
            android:id="@+id/timer"/>
    </LinearLayout>


</LinearLayout>
